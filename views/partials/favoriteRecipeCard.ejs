<html>

<body>
  <ul class="grid gap-4 md:grid-cols-2 xl:grid-cols-3">
    <% for(var i=0; i<favoriteRecipes.length; i++) {%>
      <li>
        <a href="/recipe/<%= favoriteRecipes[i].recipe._id%>" class="max-h-[450px] card h-max-[475px] bg-base-100 shadow-solid-primary
                border-2 border-black py-6 px-4">
          <figure class="flex-1 overflow-hidden border-2 border-black shadow-solid-black">
            <img class="object-center object-cover " src="<%= favoriteRecipes[i].recipe.image%>" alt="#" />
          </figure>
          <div class="card-body">

            <h2 class="card-title text-dark-slate-gray">
              <%= favoriteRecipes[i].recipe.name %>
            </h2>
            <p class="max-h-20 text-dark-slate-gray text-ellipsis overflow-hidden">
              <%= favoriteRecipes[i].recipe.description %>
            </p>

          </div>
        </a>
      </li>
      <% } %>
  </ul>
</body>

</html>