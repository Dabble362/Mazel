<%- include('partials/header') -%> <%- include('partials/navbar') -%>
<div class="flex flex-row justify-between">
  <div
    class="flex flex-col md:px-16 md:pb-16 sm:w-11/12 lg:w-4/6 bg-white/50 mx-auto px-2 shadow-xl shadow-max-yel-green-500/50"
  >
    <div class="flex">
      <h2
        class="my-4 pb-2 text-4xl w-full font-bold text-dark-slate-gray bg-gradient-to-r from-base-100 border-b-4 border-forest-green"
      >
        My Recipes
      </h2>
    </div>
    <!--///////////////////////////////// RECIPE CARD START /////////////////////////////////-->
    <% if(recipes.length === 0) { %>
    <div class="flex h-screen justify-center">
      <p
        class="text-center p-[8%] w-3/4 h-[300px] text-dark-slate-gray text-1xl font-bold bg-white/50"
      >
        We know the best recipes come from the heart, and we can't wait to see
        what you've got cooking! Start by adding your favorite recipe and let's
        create some culinary magic together
      </p>
      <div>
        <% } else { %> <%- include('partials/recipeCard') -%> <% } %>
        <!--///////////////////////////////// RECIPE CARD END /////////////////////////////////-->
      </div>
    </div>
    <!-- Put this part before </body> tag MODAL CREATE RECIPE CONTENT-->
    <%- include('partials/modal') %> <%- include('partials/footer') -%>
    <div
      class="flex flex-col md:flex-row justify-center bg-white rounded md:py-2 md:px-12 md:my-2 sm:w-11/12 lg:w-4/6 mx-auto px-2 border-2 border-black shadow-solid-black"
    >
      <a
        href="/profile?skip=<%=skip-6 %> "
        class="btn btn-outline btn-success lg:max-xl:bg-[#B5CFC8]"
        >Previous</a
      >
      <a
        href="/profile?skip=<%=skip+6 > userRecipeCount ? skip : skip+6 %>"
        class="btn btn-outline btn-success lg:max-xl:bg-[#B5CFC8]"
        >Next</a
      >
    </div>
  </div>
</div>
